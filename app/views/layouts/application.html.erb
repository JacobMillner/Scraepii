<!DOCTYPE html>
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

<html lang="en">
  
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <script>
      var ready = function() {
          // do stuff here.
          var Chartkick = {"language": "us"};
        };
      $(document).ready(ready);
      $(document).on('page:load', ready);
    </script>  
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag "darkly", :media => "all" %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <title>Uptik</title>
    <%= csrf_meta_tags %>    
  </head>
  
  <body>
    <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>
    <%= yield(:page_javascript) if content_for?(:page_javascript) %>
    <%= evil_icons_sprite %>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Uptik</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:controller] == 'home' %>"><%= link_to( "Home", :controller => "home", :action => "index") %></li>
            <li class="<%= 'active' if params[:controller] == 'datum_grids' %>"><%= link_to "Screener Sandbox", datum_grids_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Database<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to( "Symbols", :controller => "stock_data", :action => "index") %></li>
                <li><%= link_to( "History Days", :controller => "history_days", :action => "index") %></li>
                <li><%= link_to( "Day Trends", :controller => "day_trends", :action => "index") %></li>
                <li class="divider"></li>
                <li class="dropdown-header">Nav header</li>
                <li><a href="#">Separated link</a></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <%= yield %>
    <footer>
      <a href="https://github.com/Zetsuboushita/Scraepii/commits/master" class="btn btn-primary btn-xs">version <%= APP_VERSION %></a>
    </footer>
  </body>
</html>
